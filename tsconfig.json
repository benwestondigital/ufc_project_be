{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node", "express"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*", "**/*.spec.ts",
  "**/*.test.ts"]
}
